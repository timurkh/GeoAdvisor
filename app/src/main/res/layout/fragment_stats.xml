<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/top_activities_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/top_activities"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/top_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_activities_title"
        android:text="..." />

    <TextView
        android:id="@+id/top_locations_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_activities"
        android:text="@string/top_locations"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/top_locations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_locations_title"
        android:text="..." />

</LinearLayout>